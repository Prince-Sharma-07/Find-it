generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String @unique
  address         String
  password        String
  confirmPassword String
}

enum ItemStatus {
  LOST
  FOUND
}

model Item {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  location    String
  imageUrl    String?
  status      ItemStatus
  contactInfo String?
  createdAt   DateTime   @default(now())
  authorId    String
}
