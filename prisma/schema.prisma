generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String @unique
  location        String
  password        String
  confirmPassword String
}

model LostItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  itemName String
  itemDescription String  
  locationLost String
}

model FoundItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  itemName String
  itemDescription String  
  locationFound String
}

